                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:layout_weight=".5"
                        android:orientation="horizontal"

                        android:weightSum="2">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight=".8"
                            android:gravity="center_vertical"
                            android:singleLine="true"
                            android:text="Mill"
                            android:textColor="@color/black"
                            android:textSize="@dimen/fifteen_sp_txt"  />

                        <TextView
                            android:id="@+id/miller"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1.2"
                            android:gravity="center_vertical"
                            android:singleLine="true"
                            android:text=":"
                            android:textColor="@color/gray"
                            android:textSize="@dimen/fourteen_sp_text_size" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:layout_weight=".5"
                        android:orientation="horizontal"

                        android:weightSum="2">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight=".8"
                            android:gravity="center_vertical"
                            android:maxLines="2"
                            android:text="Monitoring Summary"
                            android:textColor="@color/black"
                            android:textSize="@dimen/fifteen_sp_txt" />

                        <TextView
                            android:id="@+id/monitoringSummery"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1.2"
                            android:gravity="center_vertical"
                            android:singleLine="true"
                            android:text=":"
                            android:textColor="@color/gray"
                            android:textSize="@dimen/fourteen_sp_text_size" />


                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:layout_weight=".5"
                        android:orientation="horizontal"

                        android:weightSum="2">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight=".8"
                            android:gravity="center_vertical"
                            android:maxLines="2"
                            android:text="Monitored By"
                            android:textColor="@color/black"
                            android:textSize="@dimen/fifteen_sp_txt" />

                        <TextView
                            android:id="@+id/monitorBy"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1.2"
                            android:gravity="center_vertical"
                            android:singleLine="true"
                            android:text=":"
                            android:textColor="@color/gray"
                            android:textSize="@dimen/fourteen_sp_text_size" />


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:layout_weight=".5"
                        android:orientation="horizontal"

                        android:weightSum="2">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight=".8"
                            android:gravity="center_vertical"
                            android:singleLine="true"
                            android:text="Document"
                            android:textColor="@color/black"
                            android:textSize="@dimen/fifteen_sp_txt"  />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_horizontal"
                            android:layout_weight="1.15">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:text=":  "
                                android:textColor="@color/black" />

                            <ImageButton
                                android:id="@+id/document"
                                android:layout_width="40dp"
                                android:layout_height="30dp"
                                android:background="@drawable/download" />
                        </LinearLayout>


                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>
</layout>