                                            android:layout_gravity="center_horizontal"
                                            android:layout_marginTop="5dp"

                                            android:background="@color/cardview_light_background"
                                            android:scaleType="centerCrop"
                                            android:src="@drawable/varient" />

                                    </LinearLayout>



