    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:andraoid="http://schemas.android.com/tools">
    <data>
        <variable
            name="clickHandle"
            type="com.rupayan_housing.clickHandle.ItemListClickHandle" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <LinearLayout
