<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.rupayan_housing.view.fragment.notificationsManage.TransferDetailsFragment">

    <include
        android:id="@+id/toolbar"
        layout="@layout/management_toolbar" />


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
             android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginTop="1dp"
                android:background="@color/head_tv_color"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:text="Transfer Details"
                android:textColor="@color/white"
                android:textSize="@dimen/sixteen_sp_tx_size"
                android:textStyle="bold" />


           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical"
               android:layout_margin="5dp">
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                   android:weightSum="2">

                   <TextView
                       android:layout_width="0dp"
                       android:layout_height="wrap_content"
                       android:layout_weight=".7"
                       android:text="Transfer No"
                       android:textColor="@color/black"
                      android:textSize="@dimen/fifteen_sp_txt"/>

                   <TextView
                       android:id="@+id/transferNumber"
                       android:layout_width="0dp"
                       android:layout_height="wrap_content"
                       android:layout_weight="1.3"
                       android:textSize="@dimen/fourteen_sp_text_size"
                       android:maxLines="1"
                       android:textColor="@color/gray" />

               </LinearLayout>

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                    android:weightSum="2">

                   <TextView
                       android:layout_width="0dp"
                       android:layout_height="wrap_content"
                       android:layout_weight=".6"
                       android:text="Referrer"
                       android:textColor="@color/black"
                       android:textStyle="bold"
                       android:visibility="gone" />

                   <TextView
                       android:id="@+id/referer"
                       android:layout_width="0dp"
                       android:layout_height="wrap_content"
                       android:layout_weight="1.4"
                       android:maxLines="1"
                       android:textColor="@color/gray"
                       android:visibility="gone" />

               </LinearLayout>

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                    android:weightSum="2">

                   <TextView
                       android:layout_width="0dp"
                       android:layout_height="wrap_content"
                       android:layout_weight=".7"
                       android:text="Transferred From"
                       android:textColor="@color/black"
                       android:textSize="@dimen/fifteen_sp_txt" />

                   <TextView
                       android:id="@+id/transferredFrom"
                       android:layout_width="0dp"
                       android:layout_height="wrap_content"
                       android:layout_weight="1.3"
                       android:maxLines="1"
                       android:textColor="@color/gray"
                       android:textSize="@dimen/fourteen_sp_text_size"/>

               </LinearLayout>


               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                    android:weightSum="2">

                   <TextView
                       android:layout_width="0dp"
                       android:layout_height="wrap_content"
                       android:layout_weight=".7"
                       android:text="Transferred To"
                       android:textColor="@color/black"
                       android:textSize="@dimen/fifteen_sp_txt"/>

                   <TextView
                       android:id="@+id/transferredTo"
                       android:layout_width="0dp"
                       android:layout_height="wrap_content"
                       android:layout_weight="1.3"
                       android:maxLines="1"
                       android:textColor="@color/gray"
                       android:textSize="@dimen/fourteen_sp_text_size"/>

               </LinearLayout>


               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                    android:weightSum="2">

                   <TextView
                       android:layout_width="0dp"
                       android:layout_height="wrap_content"
                       android:layout_weight=".7"
                       android:text="Date"
                       android:textColor="@color/black"
                       android:textSize="@dimen/fifteen_sp_txt" />

                   <TextView
                       android:id="@+id/dateTime"
                       android:layout_width="0dp"
                       android:layout_height="wrap_content"
                       android:layout_weight="1.3"
                       android:maxLines="1"
                       android:text=":"
                       android:textSize="@dimen/fourteen_sp_text_size"
                       android:textColor="@color/gray" />

               </LinearLayout>


               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                    android:weightSum="2">

                   <TextView
                       android:layout_width="0dp"
                       android:layout_height="wrap_content"
                       android:layout_weight=".7"
                       android:text="Note"
                       android:textColor="@color/black"
                       android:textSize="@dimen/fifteen_sp_txt"/>

                   <TextView
                       android:id="@+id/noteEt"
                       android:layout_width="0dp"
                       android:layout_height="wrap_content"
                       android:layout_weight="1.3"
                       android:maxLines="1"
                       android:text=":"
                       android:textSize="@dimen/fourteen_sp_text_size"
                       android:textColor="@color/gray" />

               </LinearLayout>

               <LinearLayout
                   android:layout_marginTop="3dp"
                    android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                   android:weightSum="2">

                   <TextView
                       android:layout_width="0dp"
                       android:layout_height="wrap_content"
                       android:layout_gravity="center_vertical"
                       android:layout_weight=".7"
                       android:text="Processed By"
                       android:textColor="@color/black"
                       android:textSize="@dimen/fifteen_sp_txt" />


                   <LinearLayout
                       android:layout_width="0dp"
                       android:layout_height="wrap_content"
                       android:layout_weight="1.3"
                       android:orientation="horizontal">

                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_gravity="center_vertical"
                           android:text=":  "
                           android:textColor="@color/black"/>

                       <com.blogspot.atifsoftwares.circularimageview.CircularImageView
                           android:id="@+id/processByImg"
                           android:layout_width="40dp"
                           android:layout_height="40dp"
                           android:layout_margin="5dp"
                           android:layout_weight="0.0001"
                           android:scaleType="centerInside"
                           android:src="@drawable/erro_logo"
                           android:text="note"
                           android:textColor="@color/gray"
                           app:c_border_color="#0B4259"
                           app:c_border_width=".5dp"
                           app:civ_border="true" />

                       <TextView
                           android:id="@+id/processByName"
                           android:layout_width="0dp"
                           android:layout_height="wrap_content"
                           android:layout_weight="0.5"
                           android:maxLines="1"
                           android:layout_gravity="center_vertical"
                           android:textColor="@color/gray"
                           android:textSize="@dimen/fourteen_sp_text_size"/>
                   </LinearLayout>

               </LinearLayout>
           </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginTop="5dp"
                android:background="#5392C5"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:text="List"
                android:textColor="@color/white"
                android:textSize="@dimen/sixteen_sp_tx_size"
                android:textStyle="bold" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/transferItemsRV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp" />
            <TextView
                android:id="@+id/noDataFound"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Data Not Found"
                android:textColor="@color/black"
                android:paddingTop="5dp"
                android:textSize="@dimen/fourteen_sp_text_size"
                android:gravity="center_horizontal"/>
        </LinearLayout>

    </androidx.core.widget.NestedScrollView>


    <LinearLayout
        android:id="@+id/approveDeclineOption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="5dp"
        android:background="#FFFF"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Note"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/noteEditText"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/edittext_shape"
            android:hint="Note"
            android:layout_marginTop="1dp"
            android:imeOptions="actionDone"
            android:maxLines="2"
            android:paddingLeft="5dp"
            android:textColor="@color/black"
            android:textColorHint="@color/gray"
            android:textSize="14sp" />

        <LinearLayout
            android:id="@+id/pendingView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="10dp"
            android:background="@color/white"
            android:gravity="right"
            android:orientation="horizontal"
            android:padding="5dp"
            android:paddingTop="5dp">

            <Button
                android:id="@+id/approveBtn"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/filter_btn_shape"
                android:text="Approve"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/declineBtn"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="30dp"

                android:background="@drawable/filter_reset_btn_shape"
                android:text="Decline"
                android:textAllCaps="false" />
        </LinearLayout>

    </LinearLayout>


</RelativeLayout>