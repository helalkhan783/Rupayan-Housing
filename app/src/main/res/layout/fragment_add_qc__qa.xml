<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="clickHandle"
            type="com.rupayan_housing.clickHandle.AddQc_QaClickHandle" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        tools:context=".view.fragment.QC_QA.AddQc_Qa">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar_binding" />

        <LinearLayout
            android:id="@+id/oko"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/toolbar"
            android:layout_margin="5dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:fontFamily="@font/lato_regular"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:text="Enterprise*"
                        android:textColor="@color/switch_color"
                        android:textSize="@dimen/fifteen_sp_txt" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/spinner_height"

                        android:layout_marginTop="1dp"
                        android:background="@drawable/edittext_shape">

                        <ScrollView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">


                            <com.chivorn.smartmaterialspinner.SmartMaterialSpinner
                                android:id="@+id/enterPrise"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="1dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginRight="1dp"
                                android:layout_marginBottom="1dp"
                                android:defaultFocusHighlightEnabled="false"
                                android:paddingLeft="5dp"
                                android:soundEffectsEnabled="false"
                                app:smsp_enableErrorLabel="false"
                                app:smsp_enableFloatingLabel="false"
                                app:smsp_floatingLabelColor="@color/white"
                                app:smsp_hint=" Select"
                                app:smsp_itemListColor="#808080"

                                app:smsp_itemListHintBackgroundColor="#808080"
                                app:smsp_itemListHintColor="#FFFFFF"
                                app:smsp_multilineError="false"
                                app:smsp_selectedItemListColor="#FF5252"
                                app:smsp_underlineSize="0dp" />


                        </ScrollView>
                    </LinearLayout>


                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:fontFamily="@font/lato_regular"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:text="Test Date"
                        android:textColor="@color/switch_color"
                        android:textSize="@dimen/fifteen_sp_txt" />

                    <TextView
                        android:id="@+id/testDate"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/spinner_height"

                        android:layout_marginTop="1dp"
                        android:layout_weight="1.5"
                        android:background="@drawable/edittext_shape"
                        android:gravity="center_vertical"
                        android:hint="mm/dd/YY"
                        android:paddingLeft="10dp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/gray"
                        android:textSize="@dimen/fourteen_sp_text_size" />


                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:fontFamily="@font/lato_regular"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:text="Sample Name*"
                        android:textColor="@color/switch_color"
                        android:textSize="@dimen/fifteen_sp_txt" />

                    <EditText
                        android:id="@+id/sampleName"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/spinner_height"

                        android:layout_weight="1.5"
                        android:background="@drawable/edittext_shape"
                        android:gravity="center_vertical"
                        android:hint="Sample Name"
                        android:paddingLeft="10dp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/gray"
                        android:textSize="@dimen/fourteen_sp_text_size" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/lato_regular"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:text="Note"
                        android:textColor="@color/switch_color"
                        android:textSize="@dimen/fifteen_sp_txt" />

                    <EditText
                        android:id="@+id/note"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/spinner_height"

                        android:background="@drawable/edittext_shape"
                        android:gravity="center_vertical"
                        android:hint="Note"
                        android:paddingLeft="10dp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/gray"
                        android:textSize="@dimen/fourteen_sp_text_size" />


                </LinearLayout>

            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="@color/gray" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:maxLines="1"
                android:singleLine="true"
                android:text="Test Parameter"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="gone"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:fontFamily="@font/lato_regular"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:text="Test Name*"
                        android:textColor="@color/switch_color"
                        android:textSize="@dimen/fifteen_sp_txt" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/spinner_height"

                        android:layout_marginTop="1dp"
                        android:background="@drawable/edittext_shape">

                        <ScrollView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">


                            <com.chivorn.smartmaterialspinner.SmartMaterialSpinner
                                android:id="@+id/testName"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="1dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginRight="1dp"
                                android:layout_marginBottom="1dp"
                                android:defaultFocusHighlightEnabled="false"
                                android:paddingLeft="5dp"
                                android:soundEffectsEnabled="false"
                                app:smsp_enableErrorLabel="false"
                                app:smsp_enableFloatingLabel="false"
                                app:smsp_floatingLabelColor="@color/white"
                                app:smsp_hint=" Select"
                                app:smsp_itemListColor="#808080"

                                app:smsp_itemListHintBackgroundColor="#808080"
                                app:smsp_itemListHintColor="#FFFFFF"
                                app:smsp_multilineError="false"
                                app:smsp_selectedItemListColor="#FF5252"
                                app:smsp_underlineSize="0dp" />


                        </ScrollView>
                    </LinearLayout>


                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:fontFamily="@font/lato_regular"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:text="Short Name"
                        android:textColor="@color/switch_color"
                        android:textSize="@dimen/fifteen_sp_txt" />

                    <TextView
                        android:id="@+id/shortName"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/spinner_height"
                        android:layout_marginTop="1dp"
                        android:layout_weight="1.5"
                        android:background="@drawable/edittext_shape"
                        android:gravity="center_vertical"
                        android:hint="Short Name"
                        android:paddingLeft="5dp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/gray"
                        android:textSize="@dimen/fourteen_sp_text_size" />


                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="gone"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:fontFamily="@font/lato_regular"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:text="Reference"
                        android:textColor="@color/switch_color"
                        android:textSize="@dimen/fifteen_sp_txt" />

                    <TextView
                        android:id="@+id/reference"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/spinner_height"
                        android:layout_marginTop="1dp"
                        android:background="@drawable/edittext_shape"
                        android:gravity="center_vertical"
                        android:hint="Reference"
                        android:paddingLeft="5dp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/gray"
                        android:textSize="@dimen/fourteen_sp_text_size" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:fontFamily="@font/lato_regular"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:text="Value"
                        android:textColor="@color/switch_color"
                        android:textSize="@dimen/fifteen_sp_txt" />

                    <EditText
                        android:id="@+id/value"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/spinner_height"
                        android:layout_marginTop="1dp"
                        android:layout_weight="1.5"
                        android:background="@drawable/edittext_shape"
                        android:gravity="center_vertical"
                        android:hint="Parameter Value"
                        android:paddingLeft="10dp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/gray"
                        android:textSize="@dimen/fourteen_sp_text_size" />


                </LinearLayout>

            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/btn"
            android:layout_below="@+id/oko"
            android:layout_margin="5dp">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/qcqaRV"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>


        <Button
            android:id="@+id/btn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/fourty_dp_btn"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/submit_button"
            android:onClick="@{()->clickHandle.saveBtn()}"
            android:text="Save" />


    </RelativeLayout>
</layout>
