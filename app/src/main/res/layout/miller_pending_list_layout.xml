<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:baselineAligned="false">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:backgroundTint="@color/white"
                android:elevation="4dp"
                app:cardCornerRadius="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2.4"
                            android:orientation="vertical"
                            android:weightSum="2">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight=".5"
                                android:orientation="horizontal"
                                android:weightSum="2">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight=".65"
                                    android:gravity="center_vertical"
                                    android:singleLine="true"
                                    android:text="EntryTime"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/fourteen_sp_text_size" />

                                <TextView
                                    android:id="@+id/entryTime"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1.35"
                                    android:gravity="center_vertical"
                                    android:singleLine="true"
                                    android:text=":"
                                    android:textSize="@dimen/thirteen_sp_size"
                                    android:textColor="@color/gray" />


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight=".5"
                                android:orientation="horizontal"
                                android:weightSum="2">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight=".65"
                                    android:gravity="center_vertical"
                                    android:singleLine="true"
                                    android:text="Name"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/fourteen_sp_text_size" />

                                <TextView
                                    android:id="@+id/name"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1.35"
                                    android:gravity="center_vertical"
                                    android:singleLine="true"
                                    android:text=":"
                                    android:textSize="@dimen/thirteen_sp_size"
                                    android:textColor="@color/gray" />


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight=".5"
                                android:orientation="horizontal"
                                android:weightSum="2">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight=".65"
                                    android:gravity="center_vertical"
                                    android:singleLine="true"
                                    android:text="Process Type"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/fourteen_sp_text_size" />

                                <TextView
                                    android:id="@+id/processType"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1.35"
                                    android:gravity="center_vertical"
                                    android:singleLine="true"
                                    android:text=":"
                                    android:textSize="@dimen/thirteen_sp_size"
                                    android:textColor="@color/gray"/>


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight=".5"
                                android:orientation="horizontal"
                                android:weightSum="2">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight=".65"
                                    android:gravity="center_vertical"
                                    android:singleLine="true"
                                    android:text="Miller Type"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/fourteen_sp_text_size" />

                                <TextView
                                    android:id="@+id/millType"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1.35"
                                    android:gravity="center_vertical"
                                    android:singleLine="true"
                                    android:text=":"
                                    android:textSize="@dimen/thirteen_sp_size"
                                    android:textColor="@color/gray" />


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight=".5"
                                android:orientation="horizontal"
                                android:weightSum="2">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight=".65"
                                    android:gravity="center_vertical"
                                    android:singleLine="true"
                                    android:text="Capacity"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/fourteen_sp_text_size" />

                                <TextView
                                    android:id="@+id/capacity"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1.35"
                                    android:gravity="center_vertical"
                                    android:singleLine="true"
                                    android:text=":"
                                    android:textSize="@dimen/thirteen_sp_size"
                                    android:textColor="@color/gray" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight=".5"
                                android:orientation="horizontal"
                                android:weightSum="2">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight=".65"
                                    android:gravity="center_vertical"
                                    android:singleLine="true"
                                    android:text="Country"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/fourteen_sp_text_size" />

                                <TextView
                                    android:id="@+id/countryName"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1.35"
                                    android:gravity="center_vertical"
                                    android:singleLine="true"
                                    android:text=":"
                                    android:textSize="@dimen/thirteen_sp_size"
                                    android:textColor="@color/gray" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight=".5"
                                android:orientation="horizontal"
                                android:weightSum="2">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight=".65"
                                    android:gravity="center_vertical"
                                    android:singleLine="true"
                                    android:text="Division"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/fourteen_sp_text_size"/>

                                <TextView
                                    android:id="@+id/divisionName"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1.35"
                                    android:gravity="center_vertical"
                                    android:singleLine="true"
                                    android:text=":"
                                    android:textSize="@dimen/thirteen_sp_size"
                                    android:textColor="@color/gray" />


                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight=".5"
                                android:orientation="horizontal"
                                android:weightSum="2">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight=".65"
                                    android:gravity="center_vertical"
                                    android:singleLine="true"
                                    android:text="District"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/fourteen_sp_text_size" />

                                <TextView
                                    android:id="@+id/districtName"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1.35"
                                    android:gravity="center_vertical"
                                    android:singleLine="true"
                                    android:text=":"
                                    android:textSize="@dimen/thirteen_sp_size"
                                    android:textColor="@color/gray" />


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight=".5"
                                android:orientation="horizontal"
                                android:weightSum="2">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight=".65"
                                    android:gravity="center_vertical"
                                    android:singleLine="true"
                                    android:text="Upazila"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/fourteen_sp_text_size" />

                                <TextView
                                    android:id="@+id/upazillaName"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1.35"
                                    android:gravity="center_vertical"
                                    android:singleLine="true"
                                    android:text=":"
                                    android:textSize="@dimen/thirteen_sp_size"
                                    android:textColor="@color/gray"/>


                            </LinearLayout>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight=".6"
                            android:orientation="vertical">

                            <androidx.appcompat.widget.SwitchCompat
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:visibility="gone"
                                android:layout_gravity="center_horizontal"
                                android:background="@color/cardview_light_background"
                                android:padding="2dp"
                                app:trackTint="@color/switch_color1" />

                            <ImageButton
                                android:id="@+id/edit"
                                android:layout_width="40dp"
                                android:layout_height="30dp"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="5dp"
                                android:background="@color/cardview_light_background"
                                android:scaleType="center"
                                android:src="@drawable/edit" />

                            <ImageButton
                                android:id="@+id/view"
                                android:layout_width="40dp"
                                android:layout_height="30dp"
                                android:layout_gravity="center"
                                android:layout_marginTop="5dp"
                                android:background="@color/cardview_light_background"
                                android:src="@drawable/eye1" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>


        </LinearLayout>


    </LinearLayout>
</layout>
