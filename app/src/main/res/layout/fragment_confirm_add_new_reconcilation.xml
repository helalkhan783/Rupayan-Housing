<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        tools:context=".view.fragment.reconciliation.addNew.ConfirmAddNewReconcilation">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar_binding" />

        <LinearLayout
            android:layout_below="@+id/toolbar"
            android:id="@+id/oko"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="vertical">


            <LinearLayout
                 android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:weightSum="2">



                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="Reconciliation Type*"
                        android:fontFamily="@font/lato_regular"
                        android:textSize="@dimen/fifteen_sp_txt"
                        android:textColor="@color/switch_color" />

                    <LinearLayout
                        android:layout_marginTop="1dp"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/spinner_height"
                        android:background="@drawable/edittext_shape">

                        <ScrollView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">


                            <com.chivorn.smartmaterialspinner.SmartMaterialSpinner
                                android:id="@+id/reconciliationType"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="1dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginRight="1dp"
                                android:layout_marginBottom="1dp"
                                android:defaultFocusHighlightEnabled="false"
                                android:paddingLeft="5dp"
                                android:soundEffectsEnabled="false"
                                app:smsp_enableErrorLabel="false"
                                app:smsp_enableFloatingLabel="false"
                                app:smsp_floatingLabelColor="@color/white"
                                app:smsp_hint=" Select"
                                app:smsp_itemListColor="#808080"

                                app:smsp_itemListHintBackgroundColor="#808080"
                                app:smsp_itemListHintColor="#FFFFFF"
                                app:smsp_multilineError="false"
                                app:smsp_selectedItemListColor="#FF5252"
                                app:smsp_underlineSize="0dp" />


                        </ScrollView>
                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:weightSum="2">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:text="Note"
                    android:fontFamily="@font/lato_regular"
                    android:textSize="@dimen/fifteen_sp_txt"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/note"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/note_et_hight"
                    android:layout_weight="1"
                    android:background="@drawable/edittext_shape"
                    android:gravity="start"
                    android:hint="Note"
                    android:padding="5dp"
                    android:textSize="@dimen/fourteen_sp_text_size"
                    android:textColor="@color/black"
                    android:textColorHint="@color/gray" />

            </LinearLayout>



        </LinearLayout>

        <TextView
            android:id="@+id/kll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/oko"
            android:layout_marginLeft="5dp"
            android:padding="5dp"
            android:text="All Product List"
            android:textColor="@color/black"
            android:textSize="@dimen/sixteen_sp_tx_size"
            android:textStyle="bold" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/save"
            android:layout_below="@+id/kll"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/selectedProductsRv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


        </LinearLayout>

        <Button
            android:id="@+id/save"
            android:layout_width="match_parent"
            android:layout_height="@dimen/fourty_dp_btn"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/submit_button"
            android:text="Save" />



    </RelativeLayout>
</layout>
