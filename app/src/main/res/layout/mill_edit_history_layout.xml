<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:backgroundTint="@color/white"
                android:elevation="3dp"
                app:cardCornerRadius="5dp">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:layout_weight="2"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight=".7"
                                android:maxLines="1"
                                android:singleLine="true"
                                android:text="Date"
                                android:textColor="@color/black"
                                android:textSize="@dimen/fourteen_sp_text_size" />

                            <TextView
                                android:id="@+id/date"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.3"
                                android:maxLines="1"
                                android:singleLine="true"
                                android:text=":"
                                android:textColor="@color/gray"
                                android:textSize="@dimen/thirteen_sp_size" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight=".7"
                                android:maxLines="1"
                                android:singleLine="true"
                                android:text="Mill Name"
                                android:textColor="@color/black"
                                android:textSize="@dimen/fourteen_sp_text_size" />

                            <TextView
                                android:id="@+id/milName"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.3"
                                android:maxLines="1"
                                android:singleLine="true"
                                android:text=":"
                                android:textColor="@color/gray"
                                android:textSize="@dimen/thirteen_sp_size" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight=".7"
                                android:maxLines="1"
                                android:singleLine="true"
                                android:text="Mill Short Name"
                                android:textColor="@color/black"
                                android:textSize="@dimen/fourteen_sp_text_size" />

                            <TextView
                                android:id="@+id/shortName"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.3"
                                android:maxLines="1"
                                android:singleLine="true"
                                android:text=":"
                                android:textColor="@color/gray"
                                android:textSize="@dimen/thirteen_sp_size" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight=".7"
                                android:maxLines="1"
                                android:singleLine="true"
                                android:text="Process type"
                                android:textColor="@color/black"
                                android:textSize="@dimen/fourteen_sp_text_size" />

                            <TextView
                                android:id="@+id/processType"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.3"
                                android:maxLines="1"
                                android:singleLine="true"
                                android:text=":"
                                android:textColor="@color/gray"
                                android:textSize="@dimen/thirteen_sp_size" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight=".7"
                                android:maxLines="1"
                                android:singleLine="true"
                                android:text="Mill type"
                                android:textColor="@color/black"
                                android:textSize="@dimen/fourteen_sp_text_size" />

                            <TextView
                                android:id="@+id/millType"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.3"
                                android:maxLines="1"
                                android:singleLine="true"
                                android:text=":"
                                android:textColor="@color/gray"
                                android:textSize="@dimen/thirteen_sp_size" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight=".7"
                                android:maxLines="1"
                                android:singleLine="true"
                                android:text="Zone"
                                android:textColor="@color/black"
                                android:textSize="@dimen/fourteen_sp_text_size" />

                            <TextView
                                android:id="@+id/zone"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.3"
                                android:maxLines="1"
                                android:singleLine="true"
                                android:text=":"
                                android:textColor="@color/gray"
                                android:textSize="@dimen/thirteen_sp_size" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight=".7"
                                android:maxLines="1"
                                android:singleLine="true"
                                android:text="Mill ID"
                                android:textColor="@color/black"
                                android:textSize="@dimen/fourteen_sp_text_size" />

                            <TextView
                                android:id="@+id/millId"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.3"
                                android:maxLines="1"
                                android:singleLine="true"
                                android:text=":"
                                android:textColor="@color/gray"
                                android:textSize="@dimen/thirteen_sp_size" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight=".7"
                                android:maxLines="1"
                                android:singleLine="true"
                                android:text="Login ID"
                                android:textColor="@color/black"
                                android:textSize="@dimen/fourteen_sp_text_size" />

                            <TextView
                                android:id="@+id/logInId"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.3"
                                android:maxLines="1"
                                android:singleLine="true"
                                android:text=":"
                                android:textColor="@color/gray"
                                android:textSize="@dimen/thirteen_sp_size" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight=".7"
                                android:maxLines="1"
                                android:singleLine="true"
                                android:text="Review Date"
                                android:textColor="@color/black"
                                android:textSize="@dimen/fourteen_sp_text_size" />

                            <TextView
                                android:id="@+id/reviewDate"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.3"
                                android:maxLines="1"
                                android:singleLine="true"
                                android:text=":"
                                android:textColor="@color/gray"
                                android:textSize="@dimen/thirteen_sp_size" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight=".7"
                                android:maxLines="1"
                                android:singleLine="true"
                                android:text="Address"
                                android:textColor="@color/black"
                                android:textSize="@dimen/fourteen_sp_text_size" />

                            <TextView
                                android:id="@+id/address"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.3"
                                android:maxLines="2"
                                android:text=":"
                                android:textColor="@color/black"
                                android:textSize="@dimen/thirteen_sp_size" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight=".7"
                                android:maxLines="1"
                                android:singleLine="true"
                                android:text="Status"
                                android:textColor="@color/black"
                                android:textSize="@dimen/fourteen_sp_text_size" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="  :"
                                android:textColor="@color/black" />

                            <androidx.appcompat.widget.SwitchCompat
                                android:id="@+id/millStatusSwitch"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_weight=".5"
                                android:background="@color/cardview_light_background"
                                android:clickable="false"
                                android:padding="2dp"
                                app:trackTint="@color/switch_color1" />
                        </LinearLayout>


                    </LinearLayout>


                </androidx.appcompat.widget.LinearLayoutCompat>


            </androidx.cardview.widget.CardView>


        </LinearLayout>
    </LinearLayout>
</layout>