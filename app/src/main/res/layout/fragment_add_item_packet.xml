<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        tools:context=".view.fragment.items.AddPacketItemFragment">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar_binding" />

        <LinearLayout
             android:id="@+id/addPacketItemLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">

         <net.cachapa.expandablelayout.ExpandableLayout
             android:id="@+id/expandableView"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             app:el_duration="800"
              app:el_parallax="0.5">
             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:orientation="vertical">
                 <LinearLayout
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:layout_marginTop="5dp"
                     android:orientation="horizontal"
                     android:weightSum="2">


                     <LinearLayout
                         android:layout_width="0dp"
                         android:layout_height="wrap_content"
                         android:layout_weight="1"
                         android:orientation="vertical">

                         <TextView
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:layout_weight=".8"
                             android:maxLines="1"
                             android:singleLine="true"
                             android:text="Packet Item Name*"
                             android:textSize="@dimen/fourteen_sp_text_size"
                             android:fontFamily="@font/lato_regular"
                             android:textColor="@color/switch_color"
                             />

                         <EditText
                             android:id="@+id/itemName"
                             android:layout_width="match_parent"
                             android:layout_height="35dp"
                             android:layout_weight="1.2"
                             android:background="@drawable/edittext_shape"
                             android:hint="Item Name"
                             android:maxLines="1"
                             android:paddingLeft="5dp"
                             android:singleLine="true"
                             android:textColor="@color/black"
                             android:textColorHint="#808080"
                             android:textSize="@dimen/fourteen_sp_text_size" />

                     </LinearLayout>


                     <LinearLayout
                         android:layout_width="0dp"
                         android:layout_height="wrap_content"
                         android:layout_marginLeft="5dp"
                         android:layout_marginRight="5dp"
                         android:layout_weight="1"
                         android:orientation="vertical">

                         <TextView
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:maxLines="1"
                             android:singleLine="true"
                             android:text="Quantity*"
                             android:textColor="@color/switch_color"
                             android:textSize="@dimen/fourteen_sp_text_size"
                             android:fontFamily="@font/lato_regular" />

                         <EditText
                             android:id="@+id/quantity"
                             android:layout_width="match_parent"
                             android:layout_height="35dp"
                             android:layout_weight="1.2"
                             android:background="@drawable/edittext_shape"
                             android:hint="Quantity"
                             android:maxLines="1"
                             android:inputType="number"
                             android:paddingLeft="5dp"
                             android:singleLine="true"
                             android:textColor="@color/black"
                             android:textColorHint="#808080"
                             android:textSize="@dimen/fourteen_sp_text_size" />

                     </LinearLayout>


                 </LinearLayout>

                 <LinearLayout
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:layout_marginTop="5dp"
                     android:orientation="horizontal"
                     android:weightSum="2">

                     <LinearLayout
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:layout_marginLeft="5dp"
                         android:layout_marginRight="5dp"
                         android:layout_weight="1"
                         android:orientation="vertical">

                         <TextView
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:maxLines="1"
                             android:singleLine="true"
                             android:text="Unit*"
                             android:textColor="@color/switch_color"
                             android:textSize="@dimen/fourteen_sp_text_size"
                             android:fontFamily="@font/lato_regular" />


                         <LinearLayout
                             android:layout_marginTop="1dp"
                             android:layout_width="match_parent"
                             android:layout_height="35dp"
                             android:background="@drawable/edittext_shape">
                             <ScrollView
                                 android:layout_width="match_parent"
                                 android:layout_height="wrap_content">
                                 <com.chivorn.smartmaterialspinner.SmartMaterialSpinner
                                     android:id="@+id/unit"
                                     android:layout_width="match_parent"
                                     android:layout_height="wrap_content"
                                     android:layout_marginLeft="1dp"
                                     android:layout_marginTop="5dp"
                                     android:layout_marginRight="1dp"
                                     android:layout_marginBottom="1dp"
                                     android:defaultFocusHighlightEnabled="false"
                                     android:paddingLeft="5dp"
                                     android:soundEffectsEnabled="false"
                                     app:smsp_enableErrorLabel="false"
                                     app:smsp_enableFloatingLabel="false"
                                     app:smsp_floatingLabelColor="@color/white"
                                     app:smsp_hint=" Select"
                                     app:smsp_itemListColor="#808080"

                                     app:smsp_itemListHintBackgroundColor="#808080"
                                     app:smsp_itemListHintColor="#FFFFFF"
                                     app:smsp_multilineError="false"
                                     app:smsp_selectedItemListColor="#FF5252"
                                     app:smsp_underlineSize="0dp" />


                             </ScrollView>
                         </LinearLayout>


                     </LinearLayout>




                 </LinearLayout>

                 <Button
                     android:id="@+id/saveBtn"
                     android:layout_width="match_parent"
                     android:layout_height="40dp"
                     android:layout_marginTop="20dp"
                     android:background="@drawable/filter_btn_shape"
                     android:text="Save" />


                 <View
                     android:layout_marginTop="5dp"
                     android:layout_width="match_parent"
                     android:layout_height=".5dp"
                     android:background="#2B2B2B"/>


             </LinearLayout>
         </net.cachapa.expandablelayout.ExpandableLayout>


        </LinearLayout>



        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/itemPacketListRv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


        <TextView
            android:id="@+id/dataNotFound"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Data Not Found"
            android:visibility="gone"
            android:gravity="center"
            android:textColor="@color/black"/>




    </LinearLayout>
</layout>