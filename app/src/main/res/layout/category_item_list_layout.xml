<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:backgroundTint="@color/white"
                android:elevation="4dp"
                app:cardCornerRadius="5dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2.4"
                        android:orientation="vertical"
                        android:weightSum="2">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight=".5"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight=".8"
                                android:gravity="center_vertical"
                                android:singleLine="true"
                                android:text="Enrolled Date    "
                                android:textColor="@color/black"
                                android:textSize="@dimen/fourteen_sp_text_size"
                                />

                            <TextView
                                android:id="@+id/enroledDate"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.2"
                                android:gravity="center_vertical"
                                android:singleLine="true"
                                android:text="good luck "
                                android:textSize="@dimen/thirteen_sp_size"
                                android:textColor="@color/gray" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_marginTop="2dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight=".5"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight=".8"
                                android:gravity="center_vertical"
                                android:singleLine="true"
                                android:text="@string/project_name"
                                android:textColor="@color/black"
                                android:textSize="@dimen/fourteen_sp_text_size"
                                />

                            <TextView
                                android:id="@+id/categoryName"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.2"
                                 android:singleLine="true"
                                android:text="ItemName"
                                android:textSize="@dimen/thirteen_sp_size"
                                android:textColor="@color/gray"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_marginTop="2dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight=".5"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight=".8"
                                android:gravity="center_vertical"
                                android:singleLine="true"
                                android:text="@string/project_code"
                                android:textColor="@color/black"
                                android:textSize="@dimen/fourteen_sp_text_size"
                                />

                            <TextView
                                android:id="@+id/categoryCode"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.2"
                                android:gravity="center_vertical"
                                android:singleLine="true"
                                android:text="#jkgdfg7  "
                                android:textSize="@dimen/thirteen_sp_size"
                                android:textColor="@color/gray" />


                        </LinearLayout>



                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="3">


                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:visibility="gone"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight=".6"
                        android:orientation="vertical">

                        <androidx.appcompat.widget.SwitchCompat
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:background="@color/cardview_light_background"
                            android:padding="2dp" />
                        <ImageButton
                            android:id="@+id/edit"
                            android:layout_width="40dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="5dp"
                            android:background="@color/cardview_light_background"
                            android:scaleType="center"
                            android:src="@drawable/edit" />

                        <ImageButton
                            android:id="@+id/delete"
                            android:layout_width="40dp"
                            android:layout_height="30dp"
                            android:layout_marginTop="5dp"
                            android:background="@color/cardview_light_background"
                            android:src="@drawable/ic_baseline_delete_forever_24"
                            android:visibility="gone" />
                    </LinearLayout>


                </LinearLayout>

            </androidx.cardview.widget.CardView>


        </LinearLayout>
    </LinearLayout>
</layout>
