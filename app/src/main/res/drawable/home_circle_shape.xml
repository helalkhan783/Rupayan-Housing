<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape
            android:shape="oval">

            <solid
                android:color="#3BA2DC"/>

            <size
                android:width="200dp"
                android:height="200dp"/>
        </shape>
    </item>

    <item
        android:top="2dp"
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp">
        <shape
            android:shape="oval">

            <solid
                android:color="@color/colorWhite"/>

            <size
                android:width="200dp"
                android:height="200dp"/>
        </shape>
    </item>

    <item
        android:top="5dp"
        android:bottom="5dp"
        android:left="5dp"
        android:right="5dp">
        <shape
            android:shape="oval">

            <solid
                android:color="#3BA2DC"/>

            <gradient
                android:type="linear"
                android:angle="0"
                android:startColor="#3BA2DC"
                android:endColor="#3BA2DC" />

            <size
                android:width="200dp"
                android:height="200dp"/>
        </shape>
    </item>

</layer-list>